<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/workshopListFragment">

    <fragment
        android:id="@+id/workshopListFragment"
        android:name="com.example.internshalaassignment.ui.WorkshopListFragment"
        android:label="WorkshopListFragment" >
        <action
            android:id="@+id/action_workshopListFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.internshalaassignment.ui.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.internshalaassignment.ui.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.internshalaassignment.ui.DashboardFragment"
        android:label="DashboardFragment" >
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>